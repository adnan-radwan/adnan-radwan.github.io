.library-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1.5rem;
  padding: 2rem 0;
}

.book-card {
  text-align: center;
  background-color: #fff;
  border: 1px solid #ddd;
  padding: 1rem;
  border-radius: 8px;
  transition: transform 0.2s ease;
}

.book-card:hover {
  transform: scale(1.03);
}

.book-card img {
  max-width: 100%;
  height: auto;
  border-radius: 4px;
  margin-bottom: 0.5rem;
}

.book-card h2 {
  font-size: 1rem;
  color: #004d7a;
  margin: 0;
}

