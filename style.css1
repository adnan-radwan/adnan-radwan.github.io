body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #fdfdfd;
  color: #222;
  margin: 0;
  padding: 0;
  direction: rtl;
}

.wrapper {
  max-width: 1000px;
  margin: auto;
  padding: 2rem;
}

header {
  text-align: center;
  padding: 2rem 1rem;
  background-color: #004d7a;
  color: white;
}

header h1 {
  margin: 0;
  font-size: 2rem;
}

header p {
  margin-top: 0.5rem;
  font-size: 1.2rem;
}

.book-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rem 1rem;
}

.cover {
  max-width: 300px;
  border: 1px solid #ccc;
  margin-bottom: 1.5rem;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

.description {
  max-width: 700px;
  text-align: right;
}

.description p {
  line-height: 1.8;
  font-size: 1.1rem;
}

.meta {
  list-style: none;
  padding: 0;
  margin-top: 1rem;
}

.meta li {
  margin-bottom: 0.5rem;
}

.buy-button {
  display: inline-block;
  margin-top: 1rem;
  padding: 0.6rem 1.2rem;
  background-color: #004d7a;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-weight: bold;
}

.buy-button:hover {
  background-color: #006fa1;
}

.audio-poem {
  margin-top: 2rem;
}

.audio-poem h3 {
  margin-bottom: 0.5rem;
}

.links {
  margin-top: 2rem;
}

.links p {
  margin: 0.3rem 0;
}

.links a {
  color: #004d7a;
  text-decoration: none;
}

.links a:hover {
  text-decoration: underline;
}

.back-button {
  margin-top: 2rem;
}

.back-button a {
  text-decoration: none;
  color: #444;
  font-weight: bold;
}

footer {
  text-align: center;
  padding: 1rem;
  background-color: #eee;
  margin-top: 3rem;
  font-size: 0.9rem;
}

